@import 'nib'

.notebook
  background-image url('/images/whatis/paperbg.png')
  padding 5px
  min-height 600px
  border-radius 4px

.polaroid
  // background-image url('/images/whatis/polaroidbg.png')
  background whitesmoke
  box-shadow 1px 2px 10px rgba(0,0,0,.25)
  // border 1px solid #ddd
  width 200px
  display inline-block
  position relative
  margin 40px

  & .tape
    width 100px
    height 50px
    background-image url('/images/whatis/tape.png')
    background-repeat no-repeat
    absolute top -10px left 50px

  & img
    margin 5px 5px 0px 5px
    width 190px

  & p
    text-align center
    padding 10px
    margin 0px
    font 500 15px "Helvetica Neue", Helvetica, Arial, sans-serif; 

