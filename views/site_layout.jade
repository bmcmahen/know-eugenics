                span.icon-bar
                span.icon-bar
                span.icon-bar
              a.logo(href='#', name='Eugenics Archives Canada', aria-hidden='true')
              .nav-collapse
                ul.nav(role='navigation')
                  li.divider-vertical
                  li
                    block nav-discover
                      a(href='/timeline') Discovery Tools
