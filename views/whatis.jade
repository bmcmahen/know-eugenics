extends prod_layout

block append styles
  link(href='/stylesheets/what_is_eugenics/whatis.css', rel='stylesheet')

block append scripts
  script(src='/javascripts/jquery.min.js')
  script(src='/javascripts/jmpress.js')
  script(src='/javascripts/whatis/whatis.js')

block subnav-whatis
  .prod.active
    img(src='images/whatis.png', role='presentation')
    p.label What is Eugenics?

block content
  #app.row
    .span3
      h2 What is Eugenics?
  .row
    .span12
      .presentation-container
        #jmpress
          .step(data-x='0', data-y='0')
            .mainpage
              .one
                span home
              .two
                a(href='#')
                  img(src='/images/whatis/galton.png')
              .three
                span three
              .four
                span four
              .five
                span five
              .six
                span six
              .seven
                span seven
          .step(data-x='1600', data-y='1100', data-scale='3')
            h2 two
          .step(data-x='3500', data-y='0', data-scale='6')
            h2 three
          .step(data-x='2500', data-y='-3000', data-scale='8')
            h2 four
          .step(data-x='-2500', data-y='-3000', data-scale='12')
            h2 five
          .step(data-x='-3500', data-y='0', data-scale='16')
            h2 six
          .step(data-x='-2500', data-y='3000', data-scale='20')
            h2 seven
