extends layout

block append styles
  link(href='stylesheets/hero.css', rel='stylesheet')
  link(href='stylesheets/heroes.css', rel='stylesheet')

block append scripts
  script(src='javascripts/underscore.js')
  script(src='javascripts/backbone.js')
  script(src='javascripts/heroes/flipcard.js')
  script(src='javascripts/heroes/app.js')


block content
  .row
    .span4
      h2 Heroes and Villains
    .span8#flipcard-toolbar
  .row
    .content.span12
      .row
        .span12#flipcard-wrapper

block templates

  script#toolbar-template(type='javascript/template').
    <input type='text' id='flipcard-search' placeholder='Search Names'>
     <div class="btn-group" data-toggle="buttons-radio">
      <button class="btn browser-sort" data-sort-field='title'> Name </button>
      <button class="btn browser-sort" data-sort-field='date'> Date </button>
    </div>
    <div class="btn-group" data-toggle="buttons-radio">
      <button class="btn browser-filter active" data-filter-category='all'> All </button>
      <button class="btn browser-filter" data-filter-category='politician'> Politicans </button>
      <button class="btn browser-filter" data-filter-category='scientist'> Scientists </button>
    </div>

  script#detail-view-template(type='javascript/template').
    <h2> <%= title %></h2>
    <p> <%= date %> </p>
    <p> <%= description %> </p>
    <p> <%= heroQuote %> </p>
    <p> <%= villainQuote %> </p> 

  script#card-view-template(type='javascript/template').
     <div class="front">
        <img src="<%= imageURL %>"/>
        <div class="caption">
          <p class="name"><strong><%= title %></strong></p>
        </div> 
      </div>
      <div class="back">
          <p>quote</p>
      </div>

  script#toolbar-template(type='javascript/template').
    <input type='text' id='flipcard-search' placeholder='Search Names'>
     <div class="btn-group" data-toggle="buttons-radio">
      <button class="btn browser-sort" data-sort-field='title'> Name </button>
      <button class="btn browser-sort" data-sort-field='category'> Occupation </button>
      <button class="btn browser-sort" data-sort-field='date'> Dates </button>
    </div>
    <div class="btn-group" data-toggle="buttons-radio">
      <button class="btn browser-filter active" data-filter-category='all'> All </button>
      <button class="btn browser-filter" data-filter-category='politician'> Politicans </button>
      <button class="btn browser-filter" data-filter-category='scientist'> Scientists </button>
    </div>